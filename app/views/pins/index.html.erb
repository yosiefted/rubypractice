<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
<div class="panel-heading"><h1>Listing Pins</h1></div>
<div class="panel-body">


<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Descrition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%=image_tag pin.image.url(:thumb)%></td>
        <td><%= pin.descrition %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-primary' %></td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary' %></td>
        <td><%= button_to 'Destroy', pin, method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<div class="panel-footer">
<%= link_to 'New Pin', new_pin_path, class:'btn btn-primary' %></div>

</div>