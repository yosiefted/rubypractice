 
 <%= render 'home/jumbo' unless user_signed_in? %>

<div id="pins">
    <% @pins.each do |pin| %>
     
      <div class="box">
        <%=link_to image_tag(pin.image.url(:medium)), pin %><br/>
        <%= pin.descrition %><br/>
        <br/>
        <% if pin.user == current_user %>
            <%= link_to 'Edit', edit_pin_path(pin) %><br/>
            <%= button_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br/>
        <% end %>
        <br/>
      
    <% end %>
    </div>
</div>
